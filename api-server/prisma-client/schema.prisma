generator client {
  provider = "prisma-client-js"
  output   = "../prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id             String    @id @default(uuid())
  userName       String
  email          String
  avatar         String?
  type           String? // "User" or "Organization"
  installationId String? // GitHub App installation ID (if installed)
  subId          String
  project        project[]
}

model project {
  id           String           @id @default(uuid())
  userId       String
  name         String
  user         user             @relation(fields: [userId], references: [id])
  gitUrl       String
  env          String?
  repoBranch   String
  subDomain    String           @unique
  customDomain String?          @unique
  deployments  deployment[]
  outputFolder String
  status       DeploymentStatus
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
}

enum DeploymentStatus {
  QUEUED
  IN_PROGRESS
  READY
}

model deployment {
  id        String   @id @default(uuid())
  projectId String
  project   project  @relation(fields: [projectId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  latest    Boolean  @default(true)
  live      Boolean  @default(true) // whether deployment logs needs to be sent over ws
}

//clickhouse db for logs deploymentID

model publicDeployments {
  id        String  @id @default(uuid())
  subdomain String
  gitURL    String
  live      Boolean @default(true)
}
